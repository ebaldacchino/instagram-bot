{
	"compilerOptions": {
		"module": "commonjs",
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "./build",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"]
		},
		"pretty": true,
		"target": "ESNext",
    "typeRoots": ["src/types/*"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"],
}
